<div class="container">
  <h1>Post a review for restaurant <%= @restaurant.name %></h1>
  <div class="row col-sm-6 col-sm-offset-6">
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING %>
    <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
